
<%= form_with model: @writing_outlet, local: true, html: { class: "left-half-form" } do |form| %>
  <div class="form-group">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :context, "Off load creativity here..." %>
    <%= form.text_area :context, class: "form-control", rows: 45, cols: 50 %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "gold-button shine-button"%>
  </div>

<% end %>